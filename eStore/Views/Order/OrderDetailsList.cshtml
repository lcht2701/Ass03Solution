@model IEnumerable<BusinessObject.Models.OrderDetail>

@{
    ViewData["Title"] = "OrderDetailsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>OrderDetailsList</h1>

<p>
    <a asp-action="CreateOrderDetail">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.ActionLink("Edit Order Detail", "EditOrderDetail", new { id=item.OrderId, pId = item.ProductId }) |
                    @Html.ActionLink("Order Details", "OrderDetails", new { id=item.OrderId, pId = item.ProductId }) |
                    @Html.ActionLink("Delete Order Detail", "DeleteOrderDetail", new { id=item.OrderId, pId = item.ProductId })
                </td>
            </tr>
        }
    </tbody>
    
</table>
<a asp-action="Index">Back to Details List</a>
